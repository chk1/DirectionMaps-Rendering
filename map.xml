<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE Map[
    <!ENTITY db_settings SYSTEM "config">
]>
<Map srs="+proj=merc +a=6378137 +b=6378137 +lat_ts=0.0 +lon_0=0.0 +x_0=0.0 +y_0=0 +k=1.0 +units=m +nadgrids=@null +wktext +no_defs +over" background-color="#fbfbdd">

  <Style name="backgroundRoads">
    <Rule>
      <!--<Filter>[type] = 'residential'</Filter>-->
      <LineSymbolizer stroke="#ffbbbb" stroke-width="1" />
      <TextSymbolizer face-name="DejaVu Sans Book" fill="black" placement="line" halo-radius="0">[name]</TextSymbolizer>
    </Rule>
  </Style>

  <Style name="highlighted">
    <Rule>
      <LineSymbolizer stroke="#ff0000" stroke-width="4" />
    </Rule>
  </Style>
  
  <Layer name="aroadnetwork" status="on" srs="+proj=merc +a=6378137 +b=6378137 +lat_ts=0.0 +lon_0=0.0 +x_0=0.0 +y_0=0 +k=1.0 +units=m +nadgrids=@null +wktext +no_defs +over">
    <StyleName>backgroundRoads</StyleName>
    <Datasource>

      &db_settings;

      <Parameter name="table">roads</Parameter>
    </Datasource>
  </Layer>
  <Layer name="afeatureset" srs="+proj=merc +a=6378137 +b=6378137 +lat_ts=0.0 +lon_0=0.0 +x_0=0.0 +y_0=0 +k=1.0 +units=m +nadgrids=@null +wktext +no_defs +over">
      <StyleName>highlighted</StyleName>
      <Datasource>
          <Parameter name="file">data/result.geojson</Parameter>
          <Parameter name="type">geojson</Parameter>
      </Datasource>
  </Layer>
</Map>
